<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed %>
  <p class="text-success"><i class="fa-solid fa-square-check"></i> Task completed</p>
<%else%>
  <p class="text-danger"><i class="fa-regular fa-square"></i> Task not completed</p>
<%end %>

<%= link_to "Edit task",edit_task_path %> |

<%= link_to "Back", tasks_path %> |

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
